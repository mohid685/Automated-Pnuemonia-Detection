<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analysis Results - Pneumonia Detection</title>
    <style>
        :root {
            --primary: #2563eb;
            --secondary: #1e40af;
            --background: #0f172a;
            --text: #e2e8f0;
            --card-bg: #1e293b;
            --error: #ef4444;
            --success: #22c55e;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: system-ui, -apple-system, sans-serif;
        }

        body {
            background: var(--background);
            color: var(--text);
            min-height: 100vh;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        h1 {
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 2rem;
            color: var(--primary);
        }

        .image-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .image-card {
            background: var(--card-bg);
            border-radius: 1rem;
            overflow: hidden;
            transform-style: preserve-3d;
            transition: transform 0.3s ease;
        }

        .image-card:hover {
            transform: translateZ(20px) scale(1.05);
        }

        .image-card img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-bottom: 2px solid var(--primary);
        }

        .image-info {
            padding: 1.5rem;
        }

        .image-info p {
            margin: 0.5rem 0;
            font-size: 0.95rem;
        }

        .image-info strong {
            color: var(--primary);
        }

        .incorrect {
            border: 2px solid var(--error);
        }

        .incorrect .image-info {
            background: rgba(239, 68, 68, 0.1);
        }

        .incorrect-tag {
            background: var(--error);
            color: white;
            padding: 0.5rem;
            border-radius: 0.25rem;
            margin-top: 1rem;
            text-align: center;
            font-weight: bold;
        }

        .back-btn {
            display: inline-block;
            padding: 1rem 2rem;
            background: var(--primary);
            color: white;
            text-decoration: none;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: var(--secondary);
            transform: scale(1.05);
        }

        .confidence-bar {
            width: 100%;
            height: 6px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
            margin-top: 0.5rem;
            overflow: hidden;
        }

        .confidence-fill {
            height: 100%;
            background: var(--primary);
            transition: width 0.3s ease;
        }

        .incorrect .confidence-fill {
            background: var(--error);
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/" class="back-btn">‚Üê Back to Home</a>
        <h1>Detailed Analysis Results</h1>

        <div class="image-grid">
            <% if (locals.results && locals.results.samples) { %>
                <% locals.results.samples.forEach((sample, index) => { %>
                    <div class="image-card <%= sample.correct ? '' : 'incorrect' %>">
                        <img src="<%= sample.image %>" alt="X-ray scan">
                        <div class="image-info">
                            <p><strong>Actual:</strong> <%= sample.true_label %></p>
                            <p><strong>Predicted:</strong> <%= sample.prediction %></p>
                            <p><strong>Confidence:</strong> <%= sample.confidence %>%</p>
                            <div class="confidence-bar">
                                <div class="confidence-fill" style="width: <%= sample.confidence %>%"></div>
                            </div>
                            <% if (!sample.correct) { %>
                                <div class="incorrect-tag">Incorrect Prediction</div>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>